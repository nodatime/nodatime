        "define": ["RELEASE", "TRACE"],
        "optimize": true
      }
    }
  },
  
  "dependencies": {
    "Newtonsoft.Json": "8.0.1",
    "NodaTime": "",
  },

  "frameworks": {
    "net451": {
    },
    "dotnet5.4": {
      "compilationOptions": {
        "define": ["PCL"]
      },
      "dependencies": {
        "System.Linq": "4.0.0"
      }
    }
  }
