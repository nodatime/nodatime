<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>NodaTime.Testing</id>
    <version>1.0.0</version>
    <authors>Jon Skeet</authors>
    <owners>Jon Skeet</owners>
    <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
    <projectUrl>http://noda-time.googlecode.com</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <!-- Note: line breaks in the description element are preserved, hence
         the long lines here. -->
    <description>
      Provides extra types which may be useful when testing code which uses Noda Time, such as a fake programmable implementation of IClock and a time zone which has a fixed transition. These types are also used to test Noda Time itself.
    </description>
    <tags>nodatime testing</tags>
    <dependencies>
      <dependency id="NodaTime" version="1.0.0" />
    </dependencies>
  </metadata>
  <files>
    <file src="bin\Release\NodaTime.Testing.dll" target="lib\net35-Client" />
    <file src="bin\Release\NodaTime.Testing.xml" target="lib\net35-Client" />
  </files>
</package>
