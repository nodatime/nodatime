{
  "version": "2.0.0-*",

  "compilationOptions": {
    "keyFile": "../../NodaTime Release.snk"
  },

  "configurations": {
    "Debug": {
      "compilationOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "compilationOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "BenchmarkDotNet": "0.9.1",
    "Microsoft.Bcl.Immutable": "1.0.34",
    "Microsoft.CodeAnalysis": "1.1.0",
    "NodaTime": "2.0.0-*",
    "NodaTime.Serialization.JsonNet": "2.0.0-*",
    "NodaTime.Testing": "2.0.0-*",
    "NUnit": "3.0.0",
    "System.Xml.XDocument": "4.0.0",
    "Newtonsoft.Json": "8.0.1"
  },

  "frameworks": {
    "dnx451": {
      "frameworkAssemblies": {
        "System.Runtime": "",
        "System.Threading.Tasks": "",
        "System.Xml.Linq": ""
      }
    }
  }
}